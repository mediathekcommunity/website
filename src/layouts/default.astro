---
import "../assets/app.css";
import Footer from "../lib/components/Footer.astro";
import { ClientRouter } from "astro:transitions";

const menuItems = [
  { href: "/", label: "Home" },
  { href: "/movies", label: "Movies" },
  { href: "/series", label: "TV Shows" },
  { href: "/youth", label: "Youth" },
  { href: "/uhd", label: "UHD" },
];

const version = "v0.12";
const siteTitle = "Mediathek Community";

// Get current page path
const currentPath = Astro.url.pathname;
---
<html lang="en" data-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <meta name="color-scheme" content="dark corporate">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.3.2/css/flag-icons.min.css" />
    <style>
      /* Prefer dark mode by default */
      @media (prefers-color-scheme: corporate) {
        :root {
          color-scheme: corporate;
        }
        html:not([data-theme]) {
          color-scheme: corporate;
        }
      }
      @media (prefers-color-scheme: dark) {
        :root {
          color-scheme: dark;
        }
        html:not([data-theme]) {
          color-scheme: dark;
        }
      }
    </style>
    <script>
      // Theme switcher functionality
      document.addEventListener('DOMContentLoaded', function() {
        const themeToggle = document.getElementById('theme-toggle');
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');
        const html = document.documentElement;
        
        // Check for saved theme preference or default to dark
        const savedTheme = localStorage.getItem('theme') || 'dark';
        html.setAttribute('data-theme', savedTheme);
        
        // Update icon visibility based on current theme
        function updateIcons(theme) {
          if (theme === 'dark') {
            sunIcon.classList.add('hidden');
            moonIcon.classList.remove('hidden');
          } else {
            sunIcon.classList.remove('hidden');
            moonIcon.classList.add('hidden');
          }
        }
        
        // Initialize icons
        updateIcons(savedTheme);
        
        // Handle theme toggle
        if (themeToggle) {
          themeToggle.addEventListener('click', function() {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'corporate' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcons(newTheme);
            updateNavbarBlur(); // Update navbar blur when theme changes
          });
        }

        // Handle navbar blur on scroll
        const navbar = document.getElementById('navbar');
        let scrollTimeout;
        
        function updateNavbarBlur() {
          const scrollY = window.scrollY;
          const currentTheme = html.getAttribute('data-theme');
          
          if (scrollY > 10) {
            // Remove any existing background classes
            navbar.classList.remove('bg-base-200/90', 'bg-gray-900/90', 'bg-white/90');
            
            // Add theme-appropriate background
            if (currentTheme === 'dark') {
              navbar.classList.add('bg-gray-900/90', 'backdrop-blur-md');
            } else {
              navbar.classList.add('bg-white/90', 'backdrop-blur-md');
            }
          } else {
            navbar.classList.remove('bg-base-200/90', 'bg-gray-900/90', 'bg-white/90', 'backdrop-blur-md');
          }
        }
        
        // Throttled scroll handler
        window.addEventListener('scroll', function() {
          if (scrollTimeout) {
            clearTimeout(scrollTimeout);
          }
          scrollTimeout = setTimeout(updateNavbarBlur, 10);
        });
      });
    </script>
 </head>
 <ClientRouter />
<div class="app min-h-screen bg-base-100 text-base-content">
  <!-- Navbar -->
  <nav
    id="navbar"
    class="fixed top-0 left-0 right-0 px-8 py-4 flex items-center justify-between z-50 transition-all duration-300"
  >
    <div class="flex items-center space-x-3">
      <a href="/" class="text-gradient font-bold text-lg">
        {siteTitle}
      </a>
      <span class="bg-base-300 text-base-content px-2 py-1 rounded-full text-xs font-medium border border-base-300">
        {version}
      </span>
    </div>

    <div class="hidden md:flex space-x-6 items-center">
      {
        menuItems.map((item) => {
          const isActive = currentPath === item.href;
          return (
            <a
              href={item.href}
              class={`text-base-content/70 hover:text-base-content transition-colors text-sm ${
                isActive ? "font-bold text-base-content" : ""
              }`}
            >
              {item.label}
            </a>
          );
        })
      }
      
      <!-- Theme Switcher -->
      <button 
        id="theme-toggle" 
        class="text-base-content/70 hover:text-base-content transition-colors p-2"
        aria-label="Toggle theme"
      >
        <svg id="sun-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hidden">
          <circle cx="12" cy="12" r="5"/>
          <path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/>
        </svg>
        <svg id="moon-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>
    </div>

    <button class="md:hidden text-base-content">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-16 6h16"></path>
      </svg>
    </button>
  </nav>
  
  <!-- Site-wide Alert Banner -->
  <div class="fixed top-16 left-0 right-0 z-40 bg-warning text-warning-content px-4 py-3 text-center text-sm shadow-lg">
    <div class="max-w-6xl mx-auto flex items-center justify-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
      </svg>
      <span class="font-medium">
         This site is currently switching to Astro. The displayed data is  pure sample data.
      </span>
    </div>
  </div>
  
  <!-- Main content -->
  <main class="pt-16">
    <slot />
  </main>
  
  <!-- Footer -->
  <Footer />
</div>
</html>
<style>
  .app {
    min-height: 100vh;
  }

  main {
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  /* Enhanced backdrop blur effect */
  .backdrop-blur-sm {
    backdrop-filter: blur(4px);
  }
  
  .backdrop-blur-md {
    backdrop-filter: blur(12px);
  }

  /* Gradient text effect for the site title */
  .text-gradient {
    background: linear-gradient(to right, #38bdf8, #818cf8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    font-weight: 700;
    letter-spacing: -0.025em;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }
  
  /* Adjust gradient for corporate theme */
  html[data-theme="corporate"] .text-gradient {
    background: linear-gradient(to right, #0284c7, #4f46e5);
    -webkit-background-clip: text;
    background-clip: text;
    text-shadow: none;
  }
</style>
